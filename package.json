{
  "name": "noodleswap",
  "version": "0.1.0",
  "description": "noodleswap game",
  "repository": "https://github.com/NoodleDAO/noodleswap",
  "license": "MIT",
  "scripts": {
    "graph:build-contract": "solc contracts/ConfigurableParametersContract.sol --abi -o abis --overwrite && solc contracts/ConfigurableParametersContract.sol --bin -o bin --overwrite",
    "graph:create": "graph create fatter-bo/noodleswap --node https://api.thegraph.com/deploy/",
    "graph:create-local": "graph create fatter-bo/noodleswap --node http://127.0.0.1:8020",
    "graph:create-bsctest": "graph create fatter-bo/noodleswap --node http://10.0.0.18:7020",
    "graph:codegen": "graph codegen",
    "graph:build": "graph build",
    "graph:deploy-rinkeby": "graph deploy fatter-bo/gameswap-rinkeby --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "graph:deploy-bsc": "graph deploy fatter-bo/noodleswap --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "graph:deploy-bsctest": "graph deploy fatter-bo/noodleswap --ipfs http://10.0.0.18:5001 --node http://10.0.0.18:7020",
    "graph:deploy-local": "graph deploy fatter-bo/noodleswap --ipfs http://localhost:5001 --node http://127.0.0.1:8020",
    "graph:watch-local": "graph deploy fatter-bo/noodleswap --watch --debug --ipfs http://localhost:5001 --node http://127.0.0.1:8020",
    "prettier:solidity": "./node_modules/.bin/prettier contracts/",
    "dev": "hardhat node",
    "test": "hardhat test",
    "mocha": "mocha --require ts-node/register --watch-extensions ts 'test/*.ts'",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage",
    "docker": "docker build -t bc-v2 . && docker run -it --rm bc-v2",
    "deploy:rinkeby": "yarn docker npx hardhat run ./scripts/deploy.ts --network rinkeby",
    "deploy:mainnet": "yarn docker npx hardhat run ./scripts/deploy.ts --network mainnet",
    "deploy:ganache": "yarn docker npx hardhat run ./scripts/deploy.ts --network ganache"
  },
  "lint-staged": {
    "script/*.ts": [
      "tslint --project . --format stylish"
    ],
    "src/**/*.{css,scss}": [
      "stylelint --config src/stylelint.config.json"
    ]
  },
  "devDependencies": {
    "@ethersproject/address": "^5.0.10",
    "@ethersproject/contracts": "^5.0.10",
    "@ethersproject/networks": "^5.0.8",
    "@ethersproject/providers": "^5.0.21",
    "@ethersproject/solidity": "^5.0.9",
    "@graphprotocol/graph-cli": "^0.20.0",
    "@graphprotocol/graph-ts": "^0.20.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/chai": "^4.2.14",
    "@types/ethereumjs-util": "^6.1.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.25",
    "@types/ws": "^7.4.2",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.3.0",
    "ethereumjs-util": "^7.0.8",
    "ethers": "^5.1.2",
    "ganache-cli": "^6.12.2",
    "hardhat": "^2.3.0",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "lint-staged": "^10.5.4",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.7",
    "solc": "^0.8.3",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.14",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typechain": "^4.0.3",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "logging": "^3.3.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.4.0",
    "ganache": "^6.4.4",
    "graphql": "^15.5.0",
    "graphql-ws": "^4.5.0",
    "truffle": "^5.3.6",
    "ws": "^7.4.5"
  }
}
